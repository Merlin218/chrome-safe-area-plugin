{
  "manifest_version": 3,
  "name": "Safe Area Simulator",
  "version": "1.0.0",
  "description": "Simulate mobile device safe area insets for web development",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Safe Area Simulator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["devices.js", "phone-frame-simple.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 