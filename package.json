{
  "name": "chrome-safe-area-plugin",
  "version": "1.0.0",
  "description": "A Chrome extension to simulate mobile device safe area insets for web development",
  "type": "module",
  "scripts": {
    "dev": "npm run build && npm run dev:watch",
    "dev:watch": "vite build --watch",
    "build": "npm run type-check && vite build",
    "build:zip": "npm run type-check && CREATE_ZIP=true vite build",
    "build:package": "npm run build:zip",
    "package": "node scripts/package.cjs",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "generate-icons": "node create-icons.js",
    "clean-icons": "rm -f icons/*.png icons/*.placeholder",
    "clean-packages": "rm -rf packages/",
    "install:extension": "echo 'Open Chrome -> chrome://extensions/ -> Enable Developer mode -> Load unpacked -> Select ./dist directory'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "manual-test": "echo 'Open test.html in Chrome and enable the extension to test functionality'",
    "validate": "npm run type-check && npm run lint && npm run test:run"
  },
  "keywords": [
    "chrome-extension",
    "safe-area",
    "mobile-development",
    "css-variables",
    "responsive-design",
    "web-development",
    "typescript"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.270",
    "@types/node": "^20.14.0",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "archiver": "^7.0.1",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vitest": "^3.2.4",
    "webextension-polyfill": "^0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/chrome-safe-area-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/username/chrome-safe-area-plugin/issues"
  },
  "homepage": "https://github.com/username/chrome-safe-area-plugin#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
